class Dil_Secim_Ekranı(View):
    def __init__(self):
        super().__init__(timeout = None)
        for language_name,language_code in languages.items():
            button = Button(label=language_name, custom_id = language_code)
            button.callback = self.language_selected
            self.add_item(button)
    async def Dil_Secimi(self, interaction: discord.Interaction):
        selected_language = interaction.data["custom_id"]
        await interaction.response.send_message(f"Seçilen dil: {selected_language}", ephemeral = True)
        self.stop()
@bot.event
async def on_ready():
    channel = bot.get_channel(1304839472696787016)
    view = LanguageSelection()
    await channel.send("Lütfen dil seçiniz:", view = view)

